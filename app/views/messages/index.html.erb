<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
  
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br />
    <% end %>
  </div>
</div>
<%= form_for(Message.new) do |f| %>
  <div class="row">
    <div class="form-group">
      <div class="col-md-4">
        <label for="inputName" class="control-label">名前</label>
        <%= f.text_field :name, class: "form-control", id: "inputName" %>
      </div>
    </div>
  </div>
  <br />
  <div class="row">
    <div class="form-group">
      <div class="col-md-6">
        <label for="inputContent" class="control-label">内容</label>
        <%= f.text_area :body, class: "form-control", id: "inputContent", placeholde: "例）具体的にお書きください。" %>
      </div>
    </div>
  </div>
  <br />
  <div class="row">
    <div class="form-group">
      <div class="col-sm-10">
        <%= f.submit class: "btn btn-sm btn-primary" %>
      </div>
    </div>
  </div>
<% end %>