<%= form_for(@message) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li><%= full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="row">
    <div class="form-group">
      <div class="col-md-4">
        <label for="inputName" class="control-label">名前</label>
        <%= f.text_field :name, class: "form-control", id: "inputName" %>
      </div>
    </div>
  </div>
  <br />
  <div class="row">
    <div class="form-group">
      <div class="col-md-6">
        <label for="inputContent" class="control-label">内容</label>
        <%= f.text_area :body, class: "form-control", id: "inputContent", placeholde: "例）具体的にお書きください。" %>
      </div>
    </div>
  </div>
  <br />
  <div class="row">
    <div class="form-group">
      <div class="col-sm-10">
        <%= f.submit class: "btn btn-sm btn-primary" %>
      </div>
    </div>
  </div>
<% end %>